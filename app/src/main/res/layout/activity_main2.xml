<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:padding="4dp"
        android:src="@drawable/gojek"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_below="@id/imageView2"
        android:padding="8dp">


        <TextView
            android:id="@+id/textViewTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Pecel Lele"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewDes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitle2"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="22dp"
            android:text="Pecel Lele Keju"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewPrice2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="46dp"
            android:layout_toRightOf="@id/harga"
            android:text="15000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle2"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="46dp"
            android:text="Harga : "
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>